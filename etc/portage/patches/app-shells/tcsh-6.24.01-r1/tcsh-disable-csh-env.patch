@@ -6,9 +6,9 @@
 
 # Load environment settings from csh.env, which is created by
 # env-update from the files in /etc/env.d
-if ( -r "@GENTOO_PORTAGE_EPREFIX@/etc/csh.env" ) then
-	source "@GENTOO_PORTAGE_EPREFIX@/etc/csh.env"
-endif
+#if ( -r "@GENTOO_PORTAGE_EPREFIX@/etc/csh.env" ) then
+#	source "@GENTOO_PORTAGE_EPREFIX@/etc/csh.env"
+#endif
 
