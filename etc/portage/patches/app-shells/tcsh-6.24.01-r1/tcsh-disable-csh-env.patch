+##MAIN	setenv PATH "/usr/local/bin:/usr/bin:/bin:${PATH}"
+##PREFIX	setenv PATH "@GENTOO_PORTAGE_EPREFIX@/usr/bin:@GENTOO_PORTAGE_EPREFIX@/bin:${PATH}:/usr/bin:/bin"
 endif
 unsetenv ROOTPATH
 
